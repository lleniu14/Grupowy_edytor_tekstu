<Window x:Class="RealTimeRTBEditor_Client.Tab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeRTBEditor_Client"
        mc:Ignorable="d"
        Title="Dodaj tabele" Height="184.8" Width="243.2"   FontSize="14" Background="#FFC7C7C7">

	<Border Background="#2e3137" CornerRadius="20" Margin="20">
		<Canvas Margin="10,0,9.6,-0.4">

			<Button x:Name="btnAddDoc" Click="btnAddDoc_Click" Content="Utwórz" Background="#545d6a" Foreground="White" FontSize="18" Canvas.Left="28" Canvas.Top="72" Height="26" Width="125"/>
			<TextBox x:Name="textBox_kolumny" Height="25" Canvas.Left="28" TextWrapping="Wrap" TextAlignment="Center" Text="Liczba kolumn" Canvas.Top="12" Width="125" GotKeyboardFocus="TextBox_GotKeyboardFocus"/>
			<TextBox x:Name="textBox_wiersze" Height="25" Canvas.Left="28" TextWrapping="Wrap" TextAlignment="Center" Text="Liczba wierszy" Canvas.Top="42" Width="125" GotKeyboardFocus="TextBox_GotKeyboardFocus"/>
		</Canvas>
	</Border>
</Window>
