<Window x:Class="RealTimeRTBEditor_Client.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="300" FontSize="14" Background="#FFC7C7C7">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="10,0,9.6,-0.4">
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Nazwa użytkownika" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Hasło" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
			<Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Zaloguj" Margin="60,10,59.6,10" Background="#545d6a" Foreground="White" FontSize="18"/>
			<Button x:Name="btnRegister" Click="btnRegister_Click" Content="Zarejestruj" Margin="60,5,59.6,5" Background="#545d6a" Foreground="White" FontSize="18"/>
		</StackPanel>
    </Border>
</Window>
